{
  "name": "推荐到 D2 日报",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "分享有价值的内容给所有志同道合的人",
  "icons": { 
    "16": "image/icon/16@2x.png",             
    "48": "image/icon/48@2x.png",            
    "128": "image/icon/128@2x.png" 
  },
  "browser_action": {
    "default_icon": "image/icon/browser_action@2x.png",
    "default_title": "D2Daily",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "permissions": [
    "contextMenus"
  ]
}
