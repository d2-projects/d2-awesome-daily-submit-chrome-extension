{
    "manifest_version": 2,
    "name": "推荐到日报",
    "description": "向更多人的分享你的发现",
    "version": "1.2.0",
    "options_page": "options.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "js": [
            "js/content.js"
        ],
        "run_at": "document_end"
    }],
    "background": {
        "scripts": [
            "hot-reload.js"
        ]
    }
}